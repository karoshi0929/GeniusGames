<UserControl x:Class="GameUser.UCIndianPoker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameUser"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" x:Name="MyCard" HorizontalAlignment="Left" Height="100" Margin="37,120,0,0" VerticalAlignment="Top" Width="70"/>
        <Image Grid.Row="0" x:Name="YourCard" HorizontalAlignment="Right" Height="100" Margin="0,120,37,0" VerticalAlignment="Top" Width="70"/>
        <Label Grid.Row="0" x:Name="BetMoney" Content="Label" HorizontalAlignment="Center" Height="100" VerticalAlignment="Center" Width="151"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Height="80" Grid.Row="1" VerticalAlignment="Top" Width="284" Margin="126,0,0,0">
            <Button x:Name="button" Content="Button"/>
            <Button x:Name="button2" Content="Button"/>
            <Button x:Name="button3" Content="Button"/>
            <Button x:Name="button4" Content="Button"/>
        </StackPanel>
    </Grid>
</UserControl>
